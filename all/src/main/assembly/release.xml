<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>release</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<baseDirectory>zklite-${project.build.finalName}</baseDirectory>
	<files>
		<file>
			<outputDirectory>/</outputDirectory>
			<source>${project.basedir}/../README.md</source>
		</file>
		<file>
			<outputDirectory>/</outputDirectory>
			<source>${project.basedir}/../LICENSE.txt</source>
		</file>
		<file>
			<outputDirectory>/</outputDirectory>
			<source>${project.basedir}/../NOTICE.txt</source>
		</file>
		<file>
			<outputDirectory>/bin</outputDirectory>
			<source>${project.basedir}/../zkserver/target/bin/main.py</source>
			<destName>server.py</destName>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<outputDirectory>/bin</outputDirectory>
			<source>${project.basedir}/../zkclient/target/bin/main.py</source>
			<destName>client.py</destName>
			<fileMode>0755</fileMode>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<outputDirectory>/lib</outputDirectory>
			<directory>${project.build.directory}/lib/compile</directory>
		</fileSet>
		<fileSet>
			<outputDirectory>/etc</outputDirectory>
			<directory>${project.basedir}/../zkcore/src/main/resources</directory>
		</fileSet>
	</fileSets>
</assembly>
