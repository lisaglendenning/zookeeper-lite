<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>release</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<baseDirectory>zklite-${project.build.finalName}</baseDirectory>
	<files>
		<file>
			<outputDirectory>/</outputDirectory>
			<source>${project.basedir}/../README.md</source>
		</file>
		<file>
			<outputDirectory>/</outputDirectory>
			<source>${project.basedir}/../LICENSE.txt</source>
		</file>
		<file>
			<outputDirectory>/</outputDirectory>
			<source>${project.basedir}/../NOTICE.txt</source>
		</file>
		<file>
			<outputDirectory>/bin</outputDirectory>
			<source>${project.basedir}/../zkserver/target/bin/main.py</source>
			<destName>server.py</destName>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<outputDirectory>/bin</outputDirectory>
			<source>${project.basedir}/../zkclient/target/bin/main.py</source>
			<destName>client.py</destName>
			<fileMode>0755</fileMode>
		</file>
        <file>
            <outputDirectory>/etc</outputDirectory>
            <source>${project.basedir}/../zkcore/src/main/resources/log4j2.xml</source>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <outputDirectory>/etc</outputDirectory>
            <source>${project.basedir}/../zkcore/src/main/resources/reference.conf</source>
            <destName>core.conf</destName>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <outputDirectory>/etc</outputDirectory>
            <source>${project.basedir}/../testing/src/main/resources/reference.conf</source>
            <destName>testing.conf</destName>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <outputDirectory>/etc</outputDirectory>
            <source>${project.basedir}/../zkclient/src/main/resources/reference.conf</source>
            <destName>client.conf</destName>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <outputDirectory>/etc</outputDirectory>
            <source>${project.basedir}/../zkserver/src/main/resources/reference.conf</source>
            <destName>server.conf</destName>
            <fileMode>0644</fileMode>
        </file>
	</files>
	<fileSets>
		<fileSet>
			<outputDirectory>/lib</outputDirectory>
			<directory>${project.build.directory}/lib/compile</directory>
		</fileSet>
	</fileSets>
</assembly>
